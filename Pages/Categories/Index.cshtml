@page
@model AbbyWeb.Pages.Categories.IndexModel;
@{
    ViewData["Title"] = "Categories";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;
                Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-stripped">
        <thea>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thea>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td style="width: 50%">@item.Name</td>
                    <td style="width: 30%">@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
