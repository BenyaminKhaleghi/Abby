@page
@model AbbyWeb.Pages.Categories.DeleteModel;
@{
    ViewData["Title"] = "Create Category";
}

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="container border p-3 mt-4">
        <input asp-for="Category.Id" hidden>
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text" class="form-control"  disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" type="number" class="form-control"  disabled/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
         <a class="btn btn-secondary" asp-page="Index" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
